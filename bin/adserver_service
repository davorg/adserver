#!/usr/bin/env perl

use warnings;
use strict;
use Daemon::Control;

use ENV::Util -load_dotenv;

use Cwd qw(abs_path);
use File::Basename;

my $abs_path = abs_path($0);
my $abs_dir  = dirname($0);

my @vars = qw[HOST NAME USER PASS];

if (grep { ! $ENV{"ADSERVER_DB_$_"} } @vars) {
  die "Please define the DB connection variables: ADSERVER_DB*\n";
}

Daemon::Control->new({
  name      => 'AdServer',
  lsb_start => '$syslog $remote_fs',
  lsb_stop  => '$syslog',
  lsb_sdesc => 'AdServer',
  lsb_desc  => 'AdServer',
  path      => $abs_path,

  program      => '/usr/bin/starman',
  program_args => [ '--workers', 10, '-l', ':4545',
                    "$abs_dir/../AdServer/bin/app.psgi" ],

  user  => 'davorg',
  group => 'psacln',

  pid_file    => '/var/run/adserver.pid',
  stderr_file => '/var/log/adserver/error.log',
  stdout_file => '/var/log/adserver/output.log',

  fork => 2,
})->run;
