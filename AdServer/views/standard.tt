<html>
  <head>
    <title><% ad.heading %></title>
    <style>
      body {
        font-family: Arial, Helvetica, sans-serif;
      }
      div.img {
        float: left;
        margin-right: 5px;
      }
      div.img img {
        max-width: 100px;
        max-height: 100px;
        border: 0;
      }
    </style>
  </head>
  <body>
    <h1><% ad.heading %></h1>
    <% IF ad.image %><div class="img"><a href="<% request.base %>ad/<% ad.hash %>"><img src="/images/client/<% ad.campaign.client.code %>/<% ad.image %>" /></a></div><% END %>
    <p><% ad.body_text %></p>
    <p><a href="<% request.base %>ad/<% ad.hash %>"><% ad.url %></a></p>
  </bpdy>
</html>
